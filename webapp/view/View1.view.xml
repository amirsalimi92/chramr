<mvc:View xmlns:semantic="sap.f.semantic"
    xmlns:smarttable="sap.ui.comp.smarttable" controllerName="de.cpro.schulung.chramr.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar">
    <Page id="page" title="{i18n>title}">
        <semantic:SemanticPage id="semantic">
            <semantic:headerContent>
                <smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="ZC_ESR_UI5_PRODUCT" basicSearchFieldName="ProductName" enableBasicSearch="true" persistencyKey="PKeyFilterbar">

                </smartFilterBar:SmartFilterBar>

            </semantic:headerContent>
            <semantic:content>
                <smarttable:SmartTable smartFilterId="smartFilterBar" id="products" entitySet="ZC_ESR_UI5_PRODUCT" enableAutoBinding="true">

                </smarttable:SmartTable>
            </semantic:content>
        </semantic:SemanticPage>
    </Page>
</mvc:View>